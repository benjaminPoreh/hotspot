<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <Button
        android:id="@+id/TVRediscover"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/orange"
        android:ems="20"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/Rediscover"
        android:textColor="@color/white"
        android:textScaleX="1.05"
        android:textSize="21sp" />

    <RelativeLayout
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/option_type_1"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_option_check" />

        <ImageView
            android:id="@+id/logo_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/option_type_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/company_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo_1"
            android:layout_toRightOf="@+id/logo_1"
            android:fontFamily="calabri"
            android:text="@string/small_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/rating_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo_1"
            android:text="@string/rating"
            android:textColor="@color/white"
            android:textSize="5pt" />

        <ImageButton
            android:id="@+id/rating_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rating_1"
            android:layout_marginLeft="7dp"
            android:background="@color/nice_green"
            android:scaleType="fitCenter"
            android:scaleX="2.5"
            android:scaleY="2.5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/option_type_2"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_option_check" />

        <ImageView
            android:id="@+id/logo_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/option_type_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/company_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo_2"
            android:layout_toRightOf="@+id/logo_2"
            android:fontFamily="calabri"
            android:text="@string/small_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/rating_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo_2"
            android:text="@string/rating"
            android:textColor="@color/white"
            android:textSize="5pt" />

        <ImageButton
            android:id="@+id/rating_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/rating_2"
            android:background="@color/nice_green"
            android:scaleType="fitCenter"
            android:scaleX="2.5"
            android:scaleY="2.5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/option_type_3"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_option_check" />

        <ImageView
            android:id="@+id/logo_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/company_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo_3"
            android:layout_toRightOf="@+id/logo_3"
            android:fontFamily="calabri"
            android:text="@string/small_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/rating_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo_3"
            android:text="@string/rating"
            android:textColor="@color/white"
            android:textSize="5pt" />

        <ImageButton
            android:id="@+id/rating_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
   			android:scaleX="2.5"
   			android:scaleY="2.5"
   			android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/rating_3"
            android:layout_centerVertical="true"
            android:background="@color/nice_green" 
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:importantForAccessibility="noHideDescendants"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/history_button01"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/history_button" />

        <ImageButton
            android:id="@+id/touch_to_start"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/find_button" 
            android:onClick="restartActivity"/>

        <ImageButton
            android:id="@+id/radius_button"
            style="@android:style/Animation.Translucent"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/radius_button" />
    </LinearLayout>

</LinearLayout>