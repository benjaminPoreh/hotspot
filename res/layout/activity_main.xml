<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center|center_horizontal"
    android:layoutMode="clipBounds"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/let_us_plan"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="80dp"
        android:background="@color/orange"
        android:ems="20"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/slogan"
        android:textColor="@color/white"
        android:textScaleX="1.05"
        android:textSize="21sp" />

    <ImageButton
        android:id="@+id/hotspot_button_get_started"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/hotspot_logo_003" 
        android:onClick="search"/>

    <TextView
        android:id="@+id/touch_to_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:text="@string/get_started"
        android:textColor="@color/nice_gray"
        android:textScaleX="1.03"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_ideas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="click here for search ideas"
        android:onClick="goToSearchIdeas"
        android:textColor="@color/nice_green" />

</LinearLayout>