<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/search_ideas_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:columnCount="2"
        android:gravity="top"
        android:orientation="vertical"
        android:rowCount="2" >

        <TextView
            android:id="@+id/restaurant_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/restaurant_search"
            android:layout_alignRight="@+id/restaurant_search"
            android:layout_below="@+id/restaurant_search"
            android:text="Restaurants" />

        <ImageButton
            android:id="@+id/party_search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/sport_text_search"
            android:layout_toLeftOf="@+id/sport_text_search"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/party_orange" />

        <ImageButton
            android:id="@+id/restaurant_search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/party_text_search"
            android:layout_toRightOf="@+id/sports_search"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/restaurants_orange" />

        <TextView
            android:id="@+id/party_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/party_search"
            android:layout_below="@+id/party_search"
            android:layout_marginLeft="27dp"
            android:text="Clubs" />

        <TextView
            android:id="@+id/parks_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/restaurant_search"
            android:layout_below="@+id/parks_search"
            android:layout_marginRight="24dp"
            android:text="Parks" />

        <ImageButton
            android:id="@+id/sports_search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/coffee_text_search"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/sports_orange" />

        <TextView
            android:id="@+id/sport_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sports_search"
            android:layout_centerHorizontal="true"
            android:text="Sporting Events" />

        <ImageButton
            android:id="@+id/parks_search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/coffe_search"
            android:layout_toRightOf="@+id/sport_text_search"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/park_orange" />

        <TextView
            android:id="@+id/search_text_ideas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:background="@color/nice_green"
            android:gravity="center_horizontal"
            android:text="Search Ideas"
            android:textSize="10pt" />

        <ImageButton
            android:id="@+id/coffe_search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/search_text_ideas"
            android:layout_marginTop="32dp"
            android:layout_toLeftOf="@+id/sport_text_search"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/coffee_shop_orange" />

        <TextView
            android:id="@+id/coffee_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coffe_search"
            android:layout_toLeftOf="@+id/sport_text_search"
            android:text="Coffee Shops" />
    </RelativeLayout>

</LinearLayout>